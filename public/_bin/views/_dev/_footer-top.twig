<section id="FooterTop" class="uk-section uk-background-default">
  <div class="uk-container">
    <div class="uk-grid-large" uk-grid>
      <div class="uk-width-2-3@m">
        <p class="uk-text-meta uk-text-uppercase uk-text-bold uk-margin-small-bottom">Say Hello</p>
        <h2 class="uk-h1 uk-margin-remove">Request a free quote</h2>
        <form class="uk-grid-column-small uk-grid-row-medium uk-margin-medium-top uk-form-stacked" uk-grid>
          <div class="uk-width-1-2">
            <label class="uk-form-label uk-text-bold" for="form-stacked-text">Name (required)</label>
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded uk-form-large" id="form-stacked-text" type="text" placeholder="Your name">
            </div>
          </div>
          <div class="uk-width-1-2">
            <label class="uk-form-label uk-text-bold" for="form-stacked-text">Company (optional)</label>
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded uk-form-large" id="form-stacked-text" type="text" placeholder="Your company name">
            </div>
          </div>
          <div class="uk-width-1-2">
            <label class="uk-form-label uk-text-bold" for="form-stacked-text">Email (required)</label>
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded uk-form-large" id="form-stacked-text" type="text" placeholder="Your working email">
            </div>
          </div>
          <div class="uk-width-1-2">
            <label class="uk-form-label uk-text-bold" for="form-stacked-text">Phone (optional)</label>
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded uk-form-large" id="form-stacked-text" type="text" placeholder="Your phone number">
            </div>
          </div>
          <div class="uk-width-1-2">
            <label class="uk-form-label uk-text-bold" for="form-stacked-text">Subject (optional)</label>
            <div class="uk-form-controls">
              <input class="uk-input uk-border-rounded uk-form-large" id="form-stacked-text" type="text" placeholder="Your message subject">
            </div>
          </div>
          <div class="uk-width-1-2">
            <label class="uk-form-label uk-text-bold" for="form-stacked-text">Choose a Budget (Euros)</label>
            <div class="uk-form-controls">
              <select class="uk-select uk-border-rounded uk-form-large">
                <option>Less than 5k</option>
                <option>5-10k</option>
                <option>Over 10k</option>
                <option>Please advise</option>
              </select>
            </div>
          </div>
        </form>
      </div>
      <div class="uk-width-1-3@m">
        <p class="uk-text-meta uk-text-uppercase uk-text-bold uk-margin-small-bottom">Get in Touch</p>
        <h2 class="uk-h1 uk-margin-remove">Email me</h2>
        <p>
          For project inquiries only:<br>
          <a class="uk-button uk-button-text uk-text-lowercase">info@robertmccormack.com</a>
        </p>
        <p class="uk-margin-medium-top">
          For other questions:<br>
          <a class="uk-button uk-button-text uk-text-lowercase">info@robertmccormack.com</a>
        </p>
      </div>
    </div>
  </div>
</section>