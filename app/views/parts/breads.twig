<ul class="uk-breadcrumb uk-margin-small-top uk-margin-remove-bottom">
  <li>
    <a href="/">Home</a>
  </li>
  {% if single.slug != 'index' %}
    {% if is_post or is_category or is_tag %}
      <li><a href="{{blog_url}}">Blog</a></li>
    {% endif %}
    {% if is_project %}
      <li><a href="{{portfolio_url}}">Portfolio</a></li>
    {% endif %}
    {% if is_category and not is_category_collection %}
      <li><a href="{{category_url}}">Categories</a></li>
    {% endif %}
    {% if is_tag and not is_tag_collection %}
      <li><a href="{{tag_url}}">Tags</a></li>
    {% endif %}
    {% if single %}
      <li><span>{{single.title}}</span></li>
    {% endif %}
    {% if is_blog or is_portfolio or is_category or is_tag %}
      <li><span>{{archive.title}}</span></li>
    {% endif %}
  {% endif %}
</ul>