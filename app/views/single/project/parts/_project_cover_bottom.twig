<section id="MainSingleCover" class="project-cover uk-background-cover uk-flex uk-flex-center uk-flex-middle {{ (single.featured_img) ? 'uk-light' : '' }}" style="{{ (single.featured_img) ? 'background-image: url(' ~ single.featured_img.src|resize(1920, 600, 'center') ~ ');' : '' }}">
  <div class="{{ (single.featured_img) ? 'uk-section uk-overlay-primary' : 'uk-background-pink uk-section' }} uk-width-1-1">
    <div class="uk-container">
      <div class="single-cover-details uk-width-1-1">
        <div class="uk-child-width-1-2@m uk-grid-large" uk-grid>
          <div>
            {% if single.taxonomies.technologies or post.date_time %}
              {% include '_project_meta.twig' %}
            {% endif %}
            <h1 class="uk-heading-large uk-margin-remove-top">{{single.title}}.</h1>
            {% if single.excerpt %}
              {% include '_project_excerpt.twig' %}
            {% endif %}
          </div>
          <div>
            {% if single.project_goal %}
              {% include '_project_goal.twig' %}
            {% endif %}
            {% if single.project_metas or single.author %}
              {% include '_project_metas.twig' %}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>